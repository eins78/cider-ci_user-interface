- task ||= @task
- cs = [task.cache_signature,task.trials.collection_cache_tag]

- cache cs do |cache_tag|

  %tr.task
    %td.state
      =link_to workspace_task_path(task) do
        = render "label_for_state", state: task.state
    %td.name
      =link_to workspace_task_path(task) do
        =task.name
    %td.trials
      %ul.list-inline.trials
        - task.trials.reorder(:created_at).each do |trial| 
          - state = trial.state
          %li.trial
            = link_to workspace_trial_path(trial), class: "label #{label_class_for_state(state)}" do
              %i{class: icon_class_for_state(state)} 
    %td.actions

      = form_tag retry_workspace_task_path(task), method: 'POST', remote: true  do
        = hidden_field_tag :authenticity_token, form_authenticity_token
        = hidden_field_tag :task_id, task.id
        = button_tag type: :submit, class: "retry button reload btn btn-primary btn-xs" do
          %i.icon-retry
          Retry


